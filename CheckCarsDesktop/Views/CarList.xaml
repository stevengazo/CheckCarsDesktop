<Window
    x:Class="CheckCarsDesktop.Views.CarList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CheckCarsDesktop.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CarList"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Menu
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <MenuItem
                Padding="5,2,5,2"
                Background="Red"
                Foreground="White"
                Header="Salir" />
            <MenuItem
                Padding="5,2,5,2"
                Background="Green"
                Foreground="White"
                Header="Agregar" />
        </Menu>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Label FontWeight="Bold">Vehículos</Label>
            <ListView Name="MiListView" Margin="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                            Width="auto"
                            DisplayMemberBinding="{Binding Nombre}"
                            Header="Vehiculo" />
                        <GridViewColumn
                            Width="auto"
                            DisplayMemberBinding="{Binding Placa}"
                            Header="Placa" />

                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Background="Red"
            Orientation="Vertical">
            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock
                    Width="150"
                    FontWeight="Bold"
                    Text="Id Vehiculo:" />
                <TextBox Width="300" Text="" />
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock
                    Width="150"
                    FontWeight="Bold"
                    Text="Marca:" />
                <TextBox Width="300" Text="" />
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock
                    Width="150"
                    FontWeight="Bold"
                    Text="Modelo:" />
                <TextBox Width="300" Text="" />
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock
                    Width="150"
                    FontWeight="Bold"
                    Text="Placa:" />
                <TextBox Width="300" Text="" />
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock
                    Width="150"
                    FontWeight="Bold"
                    Text="VIN:" />
                <TextBox Width="300" Text="" />
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock
                    Width="150"
                    FontWeight="Bold"
                    Text="Tipo:" />
                <TextBox Width="300" Text="" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
