<Window
    x:Class="CheckCarsDesktop.Views.AddCar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CheckCarsDesktop.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    WindowStartupLocation="CenterScreen"
    Title="Agregar Vehículo"
    Width="400"
    Height="550"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid Margin="10">
            <StackPanel>
                <TextBlock Text="Modelo:" />
                <TextBox Margin="5" Text="{Binding Model}" />

                <TextBlock Text="Marca:" />
                <TextBox Margin="5" Text="{Binding Brand}" />

                <TextBlock Text="Tipo Vehículo:" />
                <TextBox Margin="5" Text="{Binding Type}" />

                <TextBlock Text="Tipo Combustible:" />
                <ComboBox Margin="5" SelectedItem="{Binding FuelType}">
                    <ComboBoxItem Content="Gasoline" />
                    <ComboBoxItem Content="Diesel" />
                    <ComboBoxItem Content="Electric" />
                </ComboBox>

                <TextBlock Text="Placa:" />
                <TextBox Margin="5" Text="{Binding Plate}" />

                <TextBlock Text="VIN:" />
                <TextBox Margin="5" Text="{Binding VIN}" />

                <TextBlock Text="Año:" />
                <TextBox Margin="5" Text="{Binding Year}" />

                <TextBlock Text="Fecha Adquisición:" />
                <DatePicker Margin="5" SelectedDate="{Binding AdquisitionDate}" />

                <TextBlock Text="Color:" />
                <TextBox Margin="5" Text="{Binding Color}" />

                <TextBlock Text="Ancho:" />
                <TextBox Margin="5" Text="{Binding Width}" />

                <TextBlock Text="Largo:" />
                <TextBox Margin="5" Text="{Binding Height}" />

                <TextBlock Text="Alto:" />
                <TextBox Margin="5" Text="{Binding Length}" />

                <TextBlock Text="Peso" />
                <TextBox Margin="5" Text="{Binding Weight}" />

                <TextBlock Text="Notas:" />
                <TextBox
               Height="80"
               Margin="5"
               Text="{Binding Notes}"
               VerticalScrollBarVisibility="Auto" />

                <Button
               Margin="5"
               HorizontalAlignment="Center"
               Command="{Binding SaveCommand}"
               Content="Agregar Vehículo" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
