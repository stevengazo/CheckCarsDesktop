<Window
    x:Class="CheckCarsDesktop.Views.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:CheckCarsDesktop.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CheckCarsDesktop.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Home"
    Width="800"
    Height="600"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.DataContext>
        <ViewModels:HomeVM />
    </Window.DataContext>

    <Grid>
        <!--  Definición de filas  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Menú superior  -->
        <Menu Grid.Row="0">
            <MenuItem Header="Archivo" />
            <MenuItem Header="Vehículos" />
            <MenuItem Header="Usuarios" />
            <MenuItem Header="Configuración" />
        </Menu>

        <!--  TabControl principal  -->
        <TabControl Grid.Row="1">
            <!--  Pestaña de Salidas  -->
            <TabItem Header="Salidas">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Filtros  -->
                    <StackPanel
                        Grid.Row="0"
                        Margin="10"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="Fecha:" />
                        <DatePicker Width="150" Margin="0,0,15,0" />

                        <TextBlock
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="Placa:" />
                        <TextBox Width="150" Margin="0,0,15,0" />

                        <TextBlock
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="Autor:" />
                        <TextBox Width="150" Margin="0,0,15,0" />

                        <Button Width="100" Content="Filtrar" />
                    </StackPanel>

                    <!--  Registros  -->
                    <ListView
                        Grid.Row="1"
                        Margin="10"
                        ItemsSource="{Binding Entries, Mode=TwoWay}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="150"
                                    DisplayMemberBinding="{Binding Created}"
                                    Header="Fecha" />
                                <GridViewColumn
                                    Width="130"
                                    DisplayMemberBinding="{Binding Author}"
                                    Header="Autor" />
                                <GridViewColumn
                                    Width="90"
                                    DisplayMemberBinding="{Binding CarPlate}"
                                    Header="Placa" />
                                <GridViewColumn Width="90" Header="Odómetro">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding mileage, StringFormat='{}{0:N0} km'}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn
                                    Width="200"
                                    DisplayMemberBinding="{Binding Notes}"
                                    Header="Motivo de Uso" />
                                <!--  Columna para el botón  -->
                                <GridViewColumn Width="100" Header="Acción">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Command="{Binding DataContext.ISeeEntryReport, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding ReportId}"
                                                Content="Ver Reporte" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>

            <!--  Pestaña de Problemas  -->
            <TabItem Header="Problemas">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Filtros  -->
                    <StackPanel
                        Grid.Row="0"
                        Margin="10"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="Fecha:" />
                        <DatePicker Width="150" Margin="0,0,15,0" />

                        <TextBlock
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="Placa:" />
                        <TextBox Width="150" Margin="0,0,15,0" />

                        <TextBlock
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="Autor:" />
                        <TextBox Width="150" Margin="0,0,15,0" />

                        <Button Width="100" Content="Filtrar" />
                    </StackPanel>

                    <!--  Registros  -->
                    <ListView
                        Grid.Row="1"
                        Margin="10"
                        ItemsSource="{Binding Issues}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="150"
                                    DisplayMemberBinding="{Binding Created}"
                                    Header="Fecha" />
                                <GridViewColumn
                                    Width="150"
                                    DisplayMemberBinding="{Binding CarPlate}"
                                    Header="Placa" />
                                <GridViewColumn
                                    Width="200"
                                    DisplayMemberBinding="{Binding Author}"
                                    Header="Autor" />
                                <!--  Columna para el botón  -->
                                <GridViewColumn Width="100" Header="Acción">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Command="{Binding DataContext.ISeeIssueReport, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding ReportId}"
                                                Content="Ver Reporte" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>

            <!--  Pestaña de Accidentes  -->
            <TabItem Header="Accidentes">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="77*" />
                        <ColumnDefinition Width="717*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Filtros  -->
                    <StackPanel
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Margin="10,10,10,10"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="Fecha:" />
                        <DatePicker Width="150" Margin="0,0,15,0" />

                        <TextBlock
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="Placa:" />
                        <TextBox Width="150" Margin="0,0,15,0" />

                        <TextBlock
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Text="Autor:" />
                        <TextBox Width="150" Margin="0,0,15,0" />
                        <Button Width="100" Content="Filtrar" />
                    </StackPanel>

                    <!--  Registros  -->
                    <ListView
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Margin="10,10,10,10"
                        ItemsSource="{Binding Crashes, Mode=TwoWay}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="150"
                                    DisplayMemberBinding="{Binding Created}"
                                    Header="Fecha" />
                                <GridViewColumn
                                    Width="150"
                                    DisplayMemberBinding="{Binding CarPlate}"
                                    Header="Placa" />
                                <GridViewColumn
                                    Width="200"
                                    DisplayMemberBinding="{Binding Author}"
                                    Header="Autor" />
                                <!--  Columna para el botón  -->
                                <GridViewColumn Width="100" Header="Acción">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Command="{Binding DataContext.ISeeCrashReport, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding ReportId}"
                                                Content="Ver Reporte" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>

                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
