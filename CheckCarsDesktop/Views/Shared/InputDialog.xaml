<Window
    x:Class="CheckCarsDesktop.Views.Shared.InputDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CheckCarsDesktop.Views.Shared"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Input Dialog"
    Width="400"
    Height="130"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Margin="0,0,0,10" Text="Por favor, ingresa tu correo electrónico:" />
            <TextBox
                x:Name="InputTextBox"
                Width="300"
                Margin="0,0,0,10" />
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Width="75"
                    Margin="0,0,5,0"
                    Click="OkButton_Click"
                    Content="Aceptar" />
                <Button
                    Width="75"
                    Click="CancelButton_Click"
                    Content="Cancelar" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>