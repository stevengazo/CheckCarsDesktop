<Window
    x:Class="CheckCarsDesktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:CheckCarsDesktop.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CheckCarsDesktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Login CheckCars"
    Width="350"
    Height="400"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.DataContext>
        <ViewModels:MainWindowVM />
    </Window.DataContext>
    <Window.Resources>
        <!--  Estilo para los controles de texto  -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="30" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderBrush" Value="#FF7A7A7A" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <!--  Estilo para los botones  -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="200" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="#388E3C" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Cursor" Value="Hand" />

        </Style>

        <!--  Estilo para las etiquetas  -->
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="5,10,5,5" />
        </Style>

        <!--  Estilo para el StackPanel con el CheckBox  -->
        <Style x:Key="StackPanelStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10" />
        </Style>

    </Window.Resources>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="43.352" />
            <RowDefinition Height="6.648" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Margin="5,10,5,5"
            Content="Usuario"
            Style="{StaticResource LabelStyle}" />
        <TextBox
            Grid.Row="1"
            Margin="10,10,10,10"
            Style="{StaticResource TextBoxStyle}"
            Text="{Binding Email}" />

        <Label
            Grid.Row="2"
            Margin="5,10,5,5"
            Content="Contraseña"
            Style="{StaticResource LabelStyle}" />
        <TextBox
            Grid.Row="3"
            Margin="10,10,10,10"
            Style="{StaticResource TextBoxStyle}"
            Text="{Binding Password}" />

        <StackPanel
            Grid.Row="4"
            Margin="0,10,0,10"
            Style="{StaticResource StackPanelStyle}">
            <Label VerticalAlignment="Center" Content="Recordar" />
            <CheckBox VerticalAlignment="Center" IsChecked="{Binding Remember}" />
        </StackPanel>

        <Button
            Grid.Row="5"
            Margin="10,10,10,10"
            Command="{Binding LoginCommand}"
            Content="Ingresar"
            Style="{StaticResource ButtonStyle}" />
        <Button
            Grid.Row="6"
            Margin="10,10,10,4"
            Background="#2196F3"
            Command="{Binding ResetPasswordCommand}"
            Content="Cambiar Contraseña"
            Style="{StaticResource ButtonStyle}" />

    </Grid>
</Window>
